{
    "scripts": {
        "sync": "./node_modules/.bin/browser-sync start --server --files \"**/*\"",
        "dev": "npx postcss ./src/*.css -o dist/style.css",
        "watch:dev": "nodemon -x npm run dev -w tailwind.config.js -w ./*html  -w ./src/*css -w postcss.config.js",
        "watch": "./node_modules/.bin/run-p watch:dev sync"
    },
    "dependencies": {
        "autoprefixer": "^10.2.4",
        "browser-sync": "^2.26.14",
        "nodemon": "^2.0.7",
        "npm-run-all": "^4.1.5",
        "tailwindcss": "^2.0.2"
    }
}
