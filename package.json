{
  "scripts": {
    "sync": "./node_modules/.bin/browser-sync start --server --files \"**/*\"",
    "dev": "./node_modules/.bin/postcss  -o ./dist/tailwind.css ./src/*.css",
    "watch:dev": "nodemon -x npm run dev -w tailwind.config.js",
    "watch": "./node_modules/.bin/run-p watch:dev sync"
  },
  "dependencies": {
    "autoprefixer": "^10.2.4",
    "browser-sync": "^2.26.14",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.4",
    "postcss-cli": "^8.3.1",
    "run-p": "0.0.0",
    "tailwindcss": "^2.0.2"
  }
}
